extends ../includes/header
block content
  .container
    .row
      .col
        h1.text-center Edit your comment to #{comment.campground.name}
        .row.justify-content-center.mt-4
          .col.colt-sm-12.col-md-5
            form(action=`/campgrounds/${comment.campground.id}/comments/${comment.id}?_method=PUT`, method="POST")
              .form-group
                input.form-control(type="text" value=comment.text name="comment[text]" autocomplete="off")
              .form-group
                button.btn.btn-lg.btn-primary.btn-block(type="submit") Submit
        a.d-block.text-center(href=`/campgrounds/${comment.campground.id}`) Go Back
  include ../includes/footer