extends ../includes/header
block content
  .container
    if message.length > 0
      p #{message}
    .row
      .col-md-3.mb-3
        p(class="lead") YelpCamp
        ul(class="list-group")
          li(class="list-group-item active") Info 1
          li(class="list-group-item") Info 2
          li(class="list-group-item") Info 3
      .col-md-9
        .img-thumbnail.img-fluid
          img(src=`/${campground.image}`)
          .caption-full
            h4(class="float-right") 9$/night
            h4 
              a(href="#") #{campground.name}
            p #{campground.description}
            p #[em Submitted by #{campground.user.username}]
            if currentUser && currentUser.id === campground.user.id
              a(class="btn btn-warning" href=`/campgrounds/${campground.id}/edit/`) Edit
              form(class="u-inline" action=`/campgrounds/${campground.id}?_method=DELETE` method="POST")
                button(class="btn btn-danger") Delete
        .card.bg-light.my-3.p-3
          a(
            class="btn btn-success ml-auto"
            href=`/campgrounds/${campground.id}/comments/new`
          ) Add new comment
          hr
          each comment in campground.comments
            .row
              .col #[strong #{comment.author.username}] #[span(class="float-right") #{comment.createdAt.toLocaleDateString('en-US', {weekday: "short", month: "2-digit", day: "2-digit", year:"numeric", hour: "numeric", minute: "numeric"})}]
               p #{comment.text}